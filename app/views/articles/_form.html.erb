<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-sm-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>

        <div class="mb-3 row">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %> 
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %> 
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 13, class: "form-control shadow rounded", placeholder: "Title of article" %> 
          </div>
        </div>

        <div class="d-grid gap-2 col-5 mx-auto">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %> 
    </div> 
  </div>
  <div class="d-flex justify-content-center">
     <%= link_to 'Cancel and return to articles listing', articles_path, class: "mb-3 btn btn-secondary btn-lg btn-block" %> 
  </div>
</div> 