<h2 class="text-center mt-4"><%= @article.title %></h2>

<div class="container">
  <div class="row justify-content-md-center mt-4">
    <div class="col col-lg-8">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header fst-italic" >
          By <%= @article.user.username if @article.user %> 
          <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><td><%= simple_format(@article.description) %></td></div>
          <% if logged_in? && @article.user == current_user %> 
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-secondary" %>
            <%= link_to "Delete", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure"
            }, class: "btn btn-outline-danger" %> 
          <% end %> 
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
            edited <%= time_ago_in_words(@article.updated_at) %> ago </small>
        </div>
      </div>
    </div>
  </div> 
  <div class="d-flex justify-content-center">
     <%= link_to 'Return to list of articles', articles_path, class: "mb-5 btn btn-success btn-lg btn-block" %> 
  </div>
</div>
