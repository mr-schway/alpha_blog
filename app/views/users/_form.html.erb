<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-sm-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>

        <div class="mb-3 row">
          <%= f.label :username, class: "col-sm-2 col-form-label text-light" %> 
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %> 
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email address" %> 
          </div>
        </div> 

        <div class="mb-3 row">
          <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %> 
          </div>
        </div>

        <div class="d-grid gap-2 col-5 mx-auto">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %> 
        </div>

      <% end %> 
    </div> 
  </div>
  <div class="d-flex justify-content-center">
     <%= link_to 'Cancel and return to home page', root_path, class: "mb-3 btn btn-secondary btn-lg btn-block" %> 
  </div>
</div> 